generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  age           Int?
  location      String?
  householdSize Int?
  preferredStore String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  receipts      Receipt[]
}

model Receipt {
  id          String   @id @default(cuid())
  storeName   String
  date        DateTime
  totalAmount Float
  items       Json     // Store items as JSON array
  imageUrl    String?  // URL to the uploaded receipt image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
